{
  "name": "nikechan-controller",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./public/static/styles/globals.css",
    "watch:css": "tailwindcss -i ./src/styles/globals.css -o ./public/static/styles/globals.css --watch",
    "dev": "concurrently \"bun run watch:css\" \"bunx --bun vite\"",
    "build": "bun run build:css && bunx --bun vite build",
    "preview": "wrangler pages dev",
    "deploy": "bun run build && wrangler pages deploy"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "@supabase/supabase-js": "^2.47.10",
    "better-sqlite3": "^11.6.0",
    "hono": "^4.6.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@hono/vite-build": "^1.0.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@rollup/rollup-darwin-x64": "^4.34.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/better-sqlite3": "^7.6.12",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "vite": "^5.2.12",
    "wrangler": "^3.57.2"
  }
}
